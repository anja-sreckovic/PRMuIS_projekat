<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="520" Width="820"
        Background="#FF0A0A0A" WindowStartupLocation="CenterScreen">

    <Grid Margin="12" Background="#FF0A0A0A">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gornji panel -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Host:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#FFFF4444" FontWeight="Bold"/>
            <TextBox x:Name="HostBox" Width="160" Text="127.0.0.1" Margin="0,0,10,0" 
                     Background="#FF1A0A0A" Foreground="#FFFF4444" BorderBrush="#FFFF4444" BorderThickness="1" FontWeight="Bold" Padding="4"/>

            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="#FFFF4444" FontWeight="Bold"/>
            <TextBox x:Name="PortBox" Width="90" Text="50001" Margin="0,0,10,0"
                     Background="#FF1A0A0A" Foreground="#FFFF4444" BorderBrush="#FFFF4444" BorderThickness="1" FontWeight="Bold" Padding="4"/>

            <Button x:Name="ConnectBtn" Content="Connect" Width="110" Click="ConnectBtn_Click" Margin="0,0,8,0"
                    Background="#FFFF4444" Foreground="Black" FontWeight="Bold" BorderThickness="0">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFF4444" ShadowDepth="0" BlurRadius="12"/>
                </Button.Effect>
            </Button>

            <Button x:Name="DisconnectBtn" Content="Disconnect" Width="110" Click="DisconnectBtn_Click" IsEnabled="False"
                    Background="#FFAA2222" Foreground="Black" FontWeight="Bold" BorderThickness="0">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFF4444" ShadowDepth="0" BlurRadius="12"/>
                </Button.Effect>
            </Button>

            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="16,0,6,0" Foreground="White"/>
            <TextBlock x:Name="StatusText" Text="Disconnected" VerticalAlignment="Center" FontWeight="Bold" Foreground="#FFFF4444"/>
        </StackPanel>

        <!-- Glavni chat log -->
        <TextBox x:Name="ChatBox" Grid.Row="1" Margin="0,0,0,12"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"
                 Background="#FF1A0A0A" Foreground="#FFFF4444" BorderBrush="#FFFF4444" BorderThickness="1" Padding="6"/>

        <!-- Donji panel za slanje -->
        <DockPanel Grid.Row="2" HorizontalAlignment="Center" LastChildFill="False">
            <TextBox x:Name="MessageBox" Width="400" Height="32" Margin="0,0,8,0"
                     KeyDown="MessageBox_KeyDown"
                     Background="#FF1A0A0A" Foreground="#FFFF4444" BorderBrush="#FFFF4444" BorderThickness="1" FontWeight="Bold" Padding="4"/>

            <Button x:Name="SendBtn" Content="Send" Width="120" Height="32" Click="SendBtn_Click" IsEnabled="False"
                    Background="#FFFF4444" Foreground="Black" FontWeight="Bold" BorderThickness="0">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFF4444" ShadowDepth="0" BlurRadius="12"/>
                </Button.Effect>
            </Button>
        </DockPanel>
    </Grid>
</Window>
