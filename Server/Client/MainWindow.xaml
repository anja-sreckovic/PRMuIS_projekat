<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="520" Width="820" Background="Black">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Host:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
            <TextBox x:Name="HostBox" Width="160" Text="127.0.0.1" Margin="0,0,10,0" Background="#FF151A23" Foreground="White"/>

            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
            <TextBox x:Name="PortBox" Width="90" Text="50001" Margin="0,0,10,0" Background="#FF151A23" Foreground="White"/>

            <Button x:Name="ConnectBtn" Content="Connect" Width="110" Click="ConnectBtn_Click" Margin="0,0,8,0" Foreground="White" Background="#FF151A23"/>
            <Button x:Name="DisconnectBtn" Content="Disconnect" Width="110" Click="DisconnectBtn_Click" IsEnabled="False" Foreground="White" Background="#FF151A23"/>

            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="16,0,6,0"/>
            <TextBlock x:Name="StatusText" Text="Disconnected" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <TextBox x:Name="ChatBox" Grid.Row="1" Margin="0,12,0,12"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" FontFamily="Consolas" Background="#FF151A23" Foreground="White"/>

        <DockPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBox x:Name="MessageBox" Width="400" Height="30" Margin="0,0,8,0"
                     KeyDown="MessageBox_KeyDown" Background="#FF151A23" Foreground="White"/>
            <Button x:Name="SendBtn" Content="Send" Width="120" Click="SendBtn_Click" IsEnabled="False" Background="#FF151A23" Foreground="White"/>
        </DockPanel>
    </Grid>
</Window>
