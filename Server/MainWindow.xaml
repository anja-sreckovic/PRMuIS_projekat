<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TCP Server (Select Multiplexing)" Height="520" Width="820"
        Background="Black">
    <Grid Margin="12" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBox x:Name="PortBox" Width="90" Text="50001" Margin="0,0,10,0"/>

            <Button x:Name="StartBtn" Content="Start" Width="90" Click="StartBtn_Click" Margin="0,0,8,0"/>
            <Button x:Name="StopBtn" Content="Stop" Width="90" Click="StopBtn_Click" IsEnabled="False" Margin="0,0,16,0"/>

            <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,6,0"/>
            <TextBlock x:Name="StatusText" Text="Stopped" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <TextBox x:Name="LogBox" Grid.Row="1" Margin="0,12,0,12"
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap" FontFamily="Consolas"/>

        <DockPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBox x:Name="BroadcastBox" Width="400" DockPanel.Dock="Left" Height="30" Margin="0,0,8,0"
                     VerticalContentAlignment="Center"/>
            <Button Content="Broadcast" Width="120" Click="BroadcastBtn_Click"/>
        </DockPanel>
    </Grid>
</Window>
